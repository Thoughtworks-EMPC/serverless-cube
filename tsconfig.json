{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": ".",
    "resolveJsonModule": true,
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ],
    "declaration": true,
    "rootDir": "src/"
  },
  "exclude": ["tests", "node_modules", "./*.ts"]
}
